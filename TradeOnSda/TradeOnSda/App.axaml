<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TradeOnSda"
             x:Class="TradeOnSda.App"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Design.DataContext>
        <local:AppViewModel />
    </Design.DataContext>

    <Application.Styles>
        <FluentTheme />

        <!-- Controls -->
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/Main/MainView.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/ImportAccounts/ImportAccountsView.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/Account/AccountView.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/AccountList/AccountListView.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/Confirmations/ConfirmationsView.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/ConfirmationItem/ConfirmationsItemView.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Views/Controls/AddGuardFirstStep/AddGuardView.axaml" />

        <!-- Styles -->
        <StyleInclude Source="avares://TradeOnSda/Styles/MainStyle.axaml" />
        <StyleInclude Source="avares://TradeOnSda/Styles/Icons.axaml" />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon
                Icon="/Assets/trayIcon.ico" ToolTipText="TradeOnSDA">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Open" ToggleType="None" Command="{Binding OpenCommand}" />
                        <NativeMenuItem Header="Exit app" ToggleType="None" Command="{Binding ExitCommand}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://TradeOnSda/Styles/MainColors.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>